body
  font-family 'PT Sans', sans-serif
  font-size 16px
  line-height 1.3
  color #111
  padding 0 1em .3em

*
  /* to remove quick blinking */
  -webkit-tap-highlight-color  rgba(0,0,0,0)

.disable-select
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

[href]
  color #0044CC
  text-decoration none
  cursor pointer

  &:hover
    text-decoration underline

p
  max-width 560px

h2
  margin-top 1em
  margin-bottom 0

ul
  margin-top .375em